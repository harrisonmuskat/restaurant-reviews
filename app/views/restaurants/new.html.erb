<div class="row">
  <div class="small-6 columns small-centered">
    <h1>New Restaurant Form</h1>
  </div>
</div>

<div class="row">
  <div class="small-8 columns small-centered">
    <%= form_for(@restaurant) do |f| %>
    <div class="field">
      <%= f.label :name, "Restaurant Name" %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :address, "Street Address" %>
      <%= f.text_field :address %>
    </div>
    <div class="field">
      <%= f.label :city, "City" %>
      <%= f.text_field :city %>
    </div>
    <div class="field">
      <%= f.label :state, "State" %>
      <%= f.text_field :state %>
    </div>
    <div class="field">
      <%= f.label :zip, "Zip Code" %>
      <%= f.text_field :zip %>
    </div>
    <div class="field">
      <%= f.label :description, "Description" %>
      <%= f.text_area :description, size: '20x10' %>
    </div>
    <div class="field">
      <%= f.label :category_ids, "Categories" %>
      <%= f.collection_check_boxes :category_ids,  @category_collection, :id, :category %>
    </div>
    <div class="actions">
      <%= f.submit "Add Restaurant", class: "button" %>
    </div>
    <% end %>
  </div>
</div>
