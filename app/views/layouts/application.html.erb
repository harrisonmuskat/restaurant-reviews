<!DOCTYPE html>
<html>
<head>
  <title>RestaurantReviews</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.3.1/css/foundation.min.css" integrity="sha256-itWEYdFWzZPBG78bJOOiQIn06QCgN/F0wMDcC4nOhxY=" crossorigin="anonymous" />
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="top-bar">
    <div class="top-bar-left">
      <ul class="menu">
        <li><%= link_to "Restaurant Review Aggregator", restaurants_path, class: "menu-text" %></li>
        <li><%= link_to "Restaurant Categories", categories_path %></li>
      </ul>
    </div>
    <div class="top-bar-right">
      <ul class="menu">
        <li><%= link_to "Add New Restaurant", new_restaurant_path %></li>
      </ul>
    </div>
  </div>

  <% if flash.any? %>
    <div class="flash">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: "callout #{name}" %>
      <% end %>
    </div>
  <% end %>

  <%= yield %>

</body>
</html>
