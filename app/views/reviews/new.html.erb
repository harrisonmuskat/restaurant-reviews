<div class="row">
  <div class="small-6 columns small-centered">
    <h1>Review Form for <%= @restaurant.name %></h1>
  </div>
</div>

<div class="row">
  <div class="small-8 columns small-centered">
    <%= form_for [@restaurant, @review] do |f| %>
    <div class="field">
      <%= f.label :rating %>
      <%= f.text_field :rating %>
    </div>
    <div class="field">
      <%= f.label :body, "Review" %>
      <%= f.text_area :body, size: '20x10' %>
    </div>
    <div class="actions">
      <%= f.submit "Add Review", class: "button" %>
    </div>
    <% end %>
  </div>
</div>
